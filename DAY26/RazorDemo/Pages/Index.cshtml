@page
@model RazorDemo.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>

<p>Enter your name:</p>
<form method="post">
    <input type="text" asp-for="UserName" />
    <button type="submit">Submit</button>
</form>

@if (!string.IsNullOrEmpty(Model.GreetingMessage))
{
    <p style="color:green;">@Model.GreetingMessage</p>
}
